{
	"name": "brickrouge/brickrouge",
	"type": "library",
	"description": "A toolkit to create HTML elements",
	"keywords": ["html", "element", "form", "widget", "bootstrap"],
	"homepage": "http://brickrouge.org/",
	"license": "BSD-3-Clause",
	"authors": [
		{
			"name": "Olivier Laviale",
			"email": "olivier.laviale@gmail.com",
			"homepage": "http://www.weirdog.com/",
			"role" : "Developer"
		}
	],
	"support": {
		"issues": "https://github.com/Brickrouge/Brickrouge/issues",
		"source": "https://github.com/Brickrouge/Brickrouge"
	},
	"minimum-stability": "dev",
	"require": {
		"php": ">=5.4.0",
		"icanboogie/common": ">=1.2",
		"icanboogie/prototype": "2.x",
		"icanboogie/errors": ">=1.0"
	},
	"autoload": {
		"psr-4": {
			"Brickrouge\\": "lib/"
		},
		"files": [ "bootstrap.php", "helpers.php" ]
	},

	"extra": {

		"icanboogie": {

			"locale-path": "locale"

		}
	}
}
